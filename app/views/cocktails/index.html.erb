<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.vinepair.com/wp-content/uploads/2018/01/turmeric-social1.jpg);">
  <div class="container">
    <h1>My yellow cocktails <strong> for <strong>creative people</h1>
    <p>Change your life and drink a yellow cocktail with me</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-4">
       <div class="card">
          <img  src="https://images.pexels.com/photos/949587/pexels-photo-949587.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
        </div>
    <% end %>
  </div>
</div>
